{
    "ConnectionStrings": {
        "DefaultConnection": "Server=(localdb)\\MSSQLLocalDB;Database=ClinicAPI;Trusted_Connection=True;Encrypt=False",
        "HangfireConnection": "Server=(localdb)\\MSSQLLocalDB;Database=ClinicAPIJobs;Trusted_Connection=True;Encrypt=False"
    },
    "Serilog": {
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft.AspNetCore": "Warning",
                "Hangfire": "Information"
            }
        },
        "WriteTo": [
            {
                "Name": "File",
                "Args": {
                    "path": "./Logs/log-.txt",
                    "rollingInterval": "Day",
                    "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
                }
            }
        ],
        "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
        "Properties": {
            "ApplicationName": "ClinicAPI"
        }
    },
    "AllowedHosts": "*",
    "Jwt": {
        "Key": "",
        "Issuer": "ClinicAPIApp",
        "Audience": "ClinicAPIApp users",
        "ExpiryMinutes": 30
    },
    "MailSettings": {
        "Mail": "charlie.nicolas@ethereal.email",
        "DisplayName": "Clinic API",
        "Password": "",
        "Host": "smtp.ethereal.email",
        "Port": 587
    },
    "AllowedOrigins": [
        "",
        ""
    ],
    "HangfireSettings": {
        "Username": "",
        "Password": ""
    }
}
